<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Toolbar -->
    <include
        android:id="@+id/toolbarInclude"
        layout="@layout/toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- CARD SUBMIT ASSIGNMENT -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardSubmit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="3dp"
        app:layout_constraintTop_toBottomOf="@id/toolbarInclude"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvSubmitTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit Assignment"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvSubmitDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unggah file jawaban tugas Anda"
                android:layout_marginTop="6dp"/>

            <!-- Pilih File -->
            <Button
                android:id="@+id/btnChooseFile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pilih File (PDF/DOC)"
                android:layout_marginTop="12dp"/>

            <!-- Nama File -->
            <TextView
                android:id="@+id/tvFileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Belum ada file dipilih"
                android:textColor="#757575"
                android:layout_marginTop="6dp"/>

            <!-- Catatan -->
            <EditText
                android:id="@+id/edtNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Catatan (opsional)"
                android:minHeight="80dp"
                android:gravity="top"
                android:layout_marginTop="12dp"/>

            <!-- Submit -->
            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kirim Tugas"
                android:textAllCaps="false"
                android:backgroundTint="#1976D2"
                android:textColor="#FFFFFF"
                android:layout_marginTop="16dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
