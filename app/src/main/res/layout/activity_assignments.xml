<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Toolbar -->
    <include
        android:id="@+id/toolbarInclude"
        layout="@layout/toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- CARD INFO ASSIGNMENT -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardAssignmentInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="3dp"
        app:layout_constraintTop_toBottomOf="@id/toolbarInclude"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/tvAssignmentTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tugas Integral"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvAssignmentDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kerjakan soal integral halaman 45"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tvDeadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deadline: 20 Desember 2025"
                android:textColor="#D32F2F"
                android:layout_marginTop="6dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- LIST ASSIGNMENT -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvAssignment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/cardAssignmentInfo"
        app:layout_constraintBottom_toTopOf="@id/btnSubmitAssignment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- BUTTON SUBMIT -->
    <Button
        android:id="@+id/btnSubmitAssignment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="Submit Assignment"
        android:textAllCaps="false"
        android:backgroundTint="#1976D2"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
